<script>

//TO DO CONVERT TO JQUERY!!!!!!!!!!!!!!!!

	function hideDiv(){
		document.getElementById('SignUpFormDiv').style.display = 'none';
		document.getElementById('LogInFormDiv').style.display = 'none';
	}

	function showSUDiv(){
		document.getElementById('SignUpFormDiv').style.display = 'inline';
		document.getElementById('LogInFormDiv').style.display = 'none';
	}

	function showLIDiv(){
		document.getElementById('LogInFormDiv').style.display = 'inline';
		document.getElementById('SignUpFormDiv').style.display = 'none';
	}
</script>
